        <div>
          
                <form action="/users/dashboardCand" method="POST">
                    <div>
                        <input type="submit" value="View Job Postings"/>
                            <% obj.forEach(function(item) { %>
                                <table>
                                    <tr>
                                        <th>JobId</th>
