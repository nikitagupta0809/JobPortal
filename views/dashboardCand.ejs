                                        <div class="row">
                                            <div class="nine columns"><%= item.name %></div>
                                            <div class="three columns"><b>Job ID: </b><%= item.jobid %></div><br><br>
                                        </div>
                                        <div class="row">
                                            <b>Job Description</b> <br>
                                            <%= item.description%>
                                        </div><br><br>
