                                        <div>
                                            <input type="text" name="jobid" id="jobid" placeholder="Job ID"/>
                                        </div>
                                        <div>
                                            <input type="email" name="email" id="email" placeholder="Your email"/>
                                        </div>
                                        <input class="button-primary" type="submit" id=jobid name= jobid>Apply!</button>
                                    </div>
                                </div>
                            </div>
                    </td> 
